    CONTROL "msec",            -1,                     STATIC, SS_LEFT          | WS_CHILD  | WS_VISIBLE | WS_GROUP,                138, 41,  20, 11 
    CONTROL "&Test sound",     IDC_TRIGGER_SOUND_TEST, BUTTON, BS_PUSHBUTTON    | BS_CENTER | WS_CHILD   | WS_VISIBLE | WS_TABSTOP,  16, 62, 120, 11 
