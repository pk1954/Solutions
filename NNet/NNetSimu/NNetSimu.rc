    CONTROL "Hz",              -1,                     STATIC, SS_LEFT          | WS_CHILD  | WS_VISIBLE | WS_GROUP,                138, 22,  14, 11 
    CONTROL "&Duration:",      -1,                     STATIC, SS_LEFT          | WS_CHILD  | WS_VISIBLE | WS_GROUP,                 36, 41,  32, 11 
